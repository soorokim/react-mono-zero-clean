{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": "./src",
    "sourceMap": true,
    // d.ts파일만 생성
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "noEmit": false,
    "types": ["node", "jest"],
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [".", "*/**/*.json"],
  "exclude": ["dist", "node_modules", "rollup.config.js"]
}
