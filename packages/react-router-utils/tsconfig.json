{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // 그냥 sourceMap은 작동하지가 않음
    "inlineSources": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "types": ["node", "jest"],
    "composite": true
  },

  "include": ["./src"]
}
