{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true
  },

  "include": ["./src"],
  "exclude": ["node_modules"]
}
